



<h1>Uusi käyttäjä</h1>

<%= form_for(@user) do |f| %>




<%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label "Nimi" %><br />
    <%= f.text_field :name %>
  

  

 


  <div class="field">
    <%= f.label "Sähköpostiosoite" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :salasana %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :salasanan, "Vahvistus" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Rekisteröi" %>
  </div>
<% end %>








