<h1>Listing posts</h1>

<table>
  <tr>
    <th>Employer</th>
    <th>Job title</th>
    <th>Office</th>
    <th>Job starts</th>
    <th>Post ends</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.employer %></td>
    <td><%= post.job_title %></td>
    <td><%= post.office %></td>
    <td><%= post.job_starts %></td>
    <td><%= post.post_ends %></td>
    <td><%= link_to 'Show', post %></td>

 <% if signed_in? %>

    <td><%= link_to 'Edit', edit_post_path(post) %></td>
<% end %>
 <% if signed_in? %>

    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
<% end %>

  </tr>
<% end %>
</table>

<br />
 <% if signed_in? %>

<%= link_to 'New Post', new_post_path %>

<% end %>

