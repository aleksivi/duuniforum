<h1>Listing sub_sections</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Section</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sub_sections.each do |sub_section| %>
  <tr>
    <td><%= sub_section.name %></td>
    <td><%= sub_section.section_id %></td>
    <td><%= link_to 'Show', sub_section %></td>
    <td><%= link_to 'Edit', edit_sub_section_path(sub_section) %></td>
    <td><%= link_to 'Destroy', sub_section, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

